<Page
    x:Class="TreasureHunt.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreasureHunt.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel Margin="10, 50, 10, 0">

            <Image>
                <Image.Source>
                    <BitmapImage UriSource="ms-appx:///Assets/logo.png" />
                </Image.Source>
            </Image>
            
            <Button Margin="0, 50, 0, 0" HorizontalAlignment="Center" Click="Button_Click" Width="150">New Game</Button>
            <Button Margin="0, 30, 0, 0" HorizontalAlignment="Center" Click="Button_Click" Width="150">View Games</Button>
            <Button Margin="0, 30, 0, 0" HorizontalAlignment="Center" Click="Button_Click" Width="150">Join Game</Button>
            <Button Margin="0, 30, 0, 0" HorizontalAlignment="Center" Click="Button_Click" Width="150">Configure</Button>
        </StackPanel>
    </Grid>
</Page>
